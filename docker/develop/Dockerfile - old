FROM alpine:edge
RUN apk update
RUN apk upgrade
RUN apk add bash
RUN apk add fish
RUN apk add nano
RUN apk add ranger
RUN apk add neovim
ENV EDITOR nvim
RUN apk add git curl zip unzip
RUN apk add binutils binutils-libs patch
RUN apk add ca-certificates openssl openssl-dev
RUN apk add libc-dev libstdc++ lddtree
RUN apk add libgcc gcc libgc++ g++
RUN apk add musl musl-dev musl-utils
RUN apk add pkgconf pkgconfig
RUN apk add make cmake rustup
ENV PATH=/root/.cargo/bin:$PATH
RUN apk add python3 py3-virtualenv
RUN apk add nodejs npm
RUN npm i -g typescript browserify
RUN apk add sqlite postgresql-client
RUN apk add php8 php8-common php8-curl php8-dom php8-json php8-xml php8-posix php8-openssl php8-sockets php8-session php8-zip php8-sqlite3 php8-pgsql php8-tokenizer
RUN apk add composer
ENV TERM xterm-256color
WORKDIR "/root"